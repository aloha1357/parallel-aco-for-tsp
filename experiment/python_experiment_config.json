{
  "experiment_info": {
    "name": "Four Instances Parallel ACO Comprehensive Study",
    "description": "Comprehensive evaluation of parallel ACO algorithms on four TSP instances",
    "version": "2.0",
    "author": "TSP Parallel ACO Research Team",
    "created_date": "2025-08-18"
  },
  
  "instances": {
    "eil51": {
      "file_path": "data/eil51.tsp",
      "optimal_solution": 426,
      "size": 51,
      "category": "small",
      "description": "51-city instance (approximating 50 cities)"
    },
    "kroA100": {
      "file_path": "data/kroA100.tsp", 
      "optimal_solution": 21282,
      "size": 100,
      "category": "medium",
      "description": "100-city Krolak problem A"
    },
    "kroA150": {
      "file_path": "data/kroA150.tsp",
      "optimal_solution": 26524,
      "size": 150,
      "category": "large", 
      "description": "150-city Krolak problem A"
    },
    "gr202": {
      "file_path": "data/gr202.tsp",
      "optimal_solution": 40160,
      "size": 202,
      "category": "extra_large",
      "description": "202-city geographical instance"
    }
  },
  
  "thread_configurations": [1, 2, 4, 8],
  
  "aco_parameters": {
    "alpha": 1.0,
    "beta": 2.0,
    "rho": 0.1,
    "num_ants": 50,
    "q0": 0.9,
    "description": "Standard ACO parameters after tuning"
  },
  
  "experiment_modes": {
    "development": {
      "max_iterations": 2,
      "runs_per_configuration": 5,
      "baseline_measurements": 3,
      "description": "Quick testing mode for validation"
    },
    "production": {
      "max_iterations": 100,
      "runs_per_configuration": 100,
      "baseline_measurements": 5,
      "description": "Full experiment mode for research results"
    }
  },
  
  "experiments": {
    "fixed_iterations": {
      "name": "Fixed Iterations Experiment",
      "description": "Compare solution quality under same iteration budget",
      "metrics": [
        "tour_length",
        "ratio_to_best",
        "wall_time_s", 
        "speedup_ratio",
        "efficiency",
        "convergence_iteration"
      ]
    },
    "time_budget": {
      "name": "Time Budget Experiment", 
      "description": "Compare solution quality under same time budget",
      "baseline_measurement": "1 thread, 100 iterations execution time",
      "max_iterations_limit": 10000,
      "metrics": [
        "tour_length",
        "ratio_to_best",
        "actual_iterations",
        "time_budget_s",
        "wall_time_s",
        "iterations_per_second",
        "speedup_ratio",
        "efficiency"
      ]
    }
  },
  
  "output_settings": {
    "base_directory": "experiment/results",
    "timestamp_format": "%Y%m%d_%H%M%S",
    "csv_encoding": "utf-8",
    "plot_formats": ["png", "pdf"],
    "plot_dpi": 300,
    "create_subdirectories": [
      "fixed_iterations",
      "time_budget",
      "baseline_measurements", 
      "analysis",
      "plots",
      "raw_data"
    ]
  },
  
  "analysis_settings": {
    "statistical_analysis": {
      "confidence_level": 0.95,
      "significance_level": 0.05
    },
    "performance_metrics": {
      "speedup_calculation": "serial_time / parallel_time",
      "efficiency_calculation": "speedup / num_threads",
      "quality_threshold": 1.05
    },
    "plotting": {
      "figure_size": [12, 8],
      "font_size": 10,
      "style": "default",
      "color_palette": "husl"
    }
  },
  
  "hardware_notes": {
    "note": "Please record actual hardware specifications when running experiments",
    "recommended_specs": {
      "cpu_cores": "8+",
      "memory_gb": "16+",
      "os": "Windows 10/11 or Linux",
      "python_version": "3.7+"
    }
  }
}
